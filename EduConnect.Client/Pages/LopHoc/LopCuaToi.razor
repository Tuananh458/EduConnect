@page "/lop-cua-toi"
@attribute [Authorize]
@layout MainLayout

@using EduConnect.Client.Services
@using EduConnect.Shared.DTOs.LopHoc
@using Microsoft.AspNetCore.Authorization
@inject HocSinhService HocSinhService
@inject IJSRuntime JS

<div class="container py-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <i class="fas fa-spinner fa-spin fa-2x text-primary"></i>
            <p class="mt-3 text-muted">Đang tải thông tin lớp học...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMsg))
    {
        <div class="alert alert-danger text-center shadow-sm">
            <i class="fas fa-exclamation-circle me-2"></i>@errorMsg
        </div>
    }
    else if (lop == null)
    {
        <div class="alert alert-info text-center shadow-sm">
            <i class="fas fa-info-circle me-2"></i>Bạn hiện chưa được xếp vào lớp nào.
            <br />Vui lòng liên hệ giáo viên để được thêm vào lớp.
        </div>
    }
    else
    {
        <!-- 🧩 Header lớp học -->
        <div class="card border-0 shadow-lg rounded-4 overflow-hidden mb-4 animate-fade-in">
            <div class="card-body p-4 bg-gradient text-white" style="background:linear-gradient(135deg,#007bff,#6610f2);">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                    <div>
                        <h2 class="fw-bold mb-1">@($"{lop.TenKhoiHoc} - {lop.TenLopHoc}")</h2>
                        <div class="text-white-50 mb-1">
                            <i class="fas fa-users me-1"></i> Sĩ số: <strong>@lop.SiSo</strong>
                        </div>
                    </div>

                    <div class="d-flex align-items-center bg-white bg-opacity-25 p-3 rounded-3 shadow-sm">
                        <img src="@(!string.IsNullOrWhiteSpace(lop.AvatarGiaoVien) ? lop.AvatarGiaoVien : "/template/img/avt.svg")"
                             class="rounded-circle me-3 border border-3 border-light"
                             style="width:70px;height:70px;object-fit:cover;" />
                        <div>
                            <div class="fw-semibold fs-5">@lop.TenGiaoVienChuNhiem</div>
                            <div class="small text-white-50"><i class="fas fa-envelope me-1"></i>@lop.EmailGiaoVien</div>
                            <span class="badge bg-warning text-dark mt-1">Giáo viên chủ nhiệm</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 👥 Danh sách học sinh -->
        <div class="card border-0 shadow-sm rounded-4 animate-fade-in-up">
            <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                <h5 class="fw-semibold mb-0 text-primary">
                    <i class="fas fa-user-graduate me-2"></i> Danh sách học sinh
                </h5>
                <div class="text-muted small">@lop.DanhSachHocSinh.Count học sinh</div>
            </div>

            <div class="card-body">
                @if (lop.DanhSachHocSinh.Count == 0)
                {
                    <div class="text-center text-muted py-4">Chưa có học sinh nào trong lớp.</div>
                }
                else
                {
                    <div class="row g-3">
                        @foreach (var hs in lop.DanhSachHocSinh)
                        {
                            <div class="col-6 col-md-4 col-lg-3">
                                <div class="student-card text-center p-3 shadow-sm rounded-4 h-100 bg-light hover-glow">
                                    <div class="position-relative d-inline-block mb-2">
                                        <img src="/template/img/avt.svg" class="rounded-circle" style="width:70px;height:70px;object-fit:cover;" />
                                        @if (hs.LaLopTruong)
                                        {
                                            <span class="badge bg-warning text-dark position-absolute top-0 end-0 shadow-sm">
                                                <i class="fas fa-crown"></i>
                                            </span>
                                        }
                                    </div>
                                    <div class="fw-semibold">@hs.HoVaTen</div>
                                    <div class="text-muted small">@((hs.LaLopTruong ? "Lớp trưởng" : "Thành viên"))</div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private bool isLoading = true;
    private string? errorMsg;
    private LopHocChiTietDto? lop;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            lop = await HocSinhService.GetLopCuaToiAsync();
        }
        catch (Exception ex)
        {
            errorMsg = $"Không thể tải lớp học: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}

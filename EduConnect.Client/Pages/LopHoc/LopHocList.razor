@page "/lop-hoc"
@attribute [Authorize]
@layout MainLayout
@using EduConnect.Client.Services
@using EduConnect.Shared.DTOs
@using Microsoft.AspNetCore.Authorization
@inject LopHocService LopHocService
@inject IJSRuntime JS
@inject NavigationManager Nav


<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold mb-0">
            <i class="fas fa-school me-2"></i> Quản lý lớp học
        </h2>

        <div>
            <button class="btn btn-primary me-2" @onclick="ShowCreateModal">
                <i class="fas fa-plus-circle"></i> Thêm lớp học
            </button>
            <button class="btn btn-outline-primary me-2"><i class="fas fa-level-up-alt"></i> Nâng lớp</button>
            <button class="btn btn-outline-secondary"><i class="fas fa-trash"></i> Lớp đã xóa</button>
        </div>
    </div>

    @if (lopHocs == null)
    {
        <div>Đang tải dữ liệu...</div>
    }
    else if (!lopHocs.Any())
    {
        <div class="alert alert-info">Chưa có lớp học nào.</div>
    }
    else
    {
        @foreach (var khoi in khoiHocs)
        {
            var lopTheoKhoi = lopHocs.Where(l => l.MaKhoiHoc == khoi.Key).ToList();
            if (lopTheoKhoi.Any())
            {
                <h4 class="fw-bold mt-4 mb-3 text-secondary">@khoi.Value</h4>

                <div class="row">
                    @foreach (var lop in lopTheoKhoi)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card shadow-sm border-0">
                                <div class="card-body">
                                    <h5 class="card-title text-primary fw-bold">
                                        Lớp @($"{lop.MaKhoiHoc}{lop.TenLopHoc}")
                                        <span class="badge bg-light text-dark ms-2">
                                            <i class="fas fa-user-graduate"></i> @lop.SiSo
                                        </span>
                                        <span class="badge bg-secondary ms-2">Lớp cá nhân</span>
                                    </h5>

                                    <div class="mt-3">
                                        <button class="btn btn-link text-primary text-decoration-none me-3 p-0"
                                                @onclick='() => Nav.NavigateTo($"/lophoc/{lop.MaLopHoc}/thanhvien")'>
                                            <i class="fas fa-cog"></i> Thiết lập
                                        </button>

                                        <button class="btn btn-link text-warning text-decoration-none me-3 p-0">
                                            <i class="fas fa-download"></i> Tải về
                                        </button>

                                        <button class="btn btn-link text-info text-decoration-none me-3 p-0"
                                                @onclick="() => Edit(lop.MaLopHoc)">
                                            <i class="fas fa-edit"></i> Sửa
                                        </button>

                                        <button class="btn btn-link text-danger text-decoration-none p-0"
                                                @onclick="() => Delete(lop.MaLopHoc)">
                                            <i class="fas fa-times-circle"></i> Xóa
                                        </button>
                                    </div>


                                    <div class="mt-3">
                                        <button class="btn btn-sm btn-outline-primary me-2">
                                            <i class="fas fa-video"></i> Zoom
                                        </button>
                                        <button class="btn btn-sm btn-outline-success">
                                            <i class="fas fa-users"></i> Meet
                                        </button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    }
                </div>
            }
        }
    }
</div>

<!-- Modal thêm / sửa lớp học -->
@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content border-0 shadow">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">@modalTitle</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Tên lớp học</label>
                        <input @bind="editModel.TenLopHoc" class="form-control" placeholder="VD: A1;A2;A1" />
                        @if (isCreate)
                        {
                            <small class="text-muted">* Có thể nhập nhiều tên lớp, cách nhau bằng dấu chấm phẩy (;)</small>
                        }
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Khối học</label>
                        <select @bind="editModel.MaKhoiHoc" class="form-select">
                            <option value="">-- Chọn khối học --</option>
                            @foreach (var khoi in khoiHocs)
                            {
                                <option value="@khoi.Key">@khoi.Value</option>
                            }
                        </select>
                    </div>

                    @if (!isCreate)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Trạng thái</label>
                            <select @bind="editModel.TrangThai" class="form-select">
                                <option value="Hoạt động">Hoạt động</option>
                                <option value="Tạm dừng">Tạm dừng</option>
                                <option value="Ngưng hoạt động">Ngưng hoạt động</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Sĩ số</label>
                            <input type="number" @bind="editModel.SiSo" class="form-control" />
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseModal">Đóng</button>
                    <button class="btn btn-primary" @onclick="Save">@buttonText</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<LopHocDto>? lopHocs;
    private bool showModal = false;
    private bool isCreate = true;
    private string modalTitle = "Thêm lớp học";
    private string buttonText = "Lưu";

    private CreateLopHocRequest createModel = new();
    private UpdateLopHocRequest editModel = new();

    private readonly Dictionary<int, string> khoiHocs = new()
    {
        { 10, "Khối 10" },
        { 11, "Khối 11" },
        { 12, "Khối 12" },
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadLopHoc();
    }

    private async Task LoadLopHoc()
    {
        lopHocs = await LopHocService.GetAllAsync();
        StateHasChanged();
    }

    private void ShowCreateModal()
    {
        isCreate = true;
        modalTitle = "Thêm lớp học mới";
        buttonText = "Thêm";
        editModel = new();
        createModel = new();
        showModal = true;
    }

    private void CloseModal() => showModal = false;

    private async Task Edit(int id)
    {
        var item = await LopHocService.GetByIdAsync(id);
        if (item == null)
        {
            await JS.InvokeVoidAsync("alert", "Không tìm thấy lớp học!");
            return;
        }

        isCreate = false;
        modalTitle = "Cập nhật lớp học";
        buttonText = "Cập nhật";

        editModel = new UpdateLopHocRequest
            {
                MaLopHoc = item.MaLopHoc,
                TenLopHoc = item.TenLopHoc,
                MaKhoiHoc = item.MaKhoiHoc,
                SiSo = item.SiSo ?? 0,
                TrangThai = item.TrangThai ?? "Hoạt động"
            };

        showModal = true;
    }

    private async Task Save()
    {
        if (string.IsNullOrWhiteSpace(editModel.TenLopHoc))
        {
            await JS.InvokeVoidAsync("alert", "Tên lớp học không được để trống!");
            return;
        }

        if (editModel.MaKhoiHoc == 0)
        {
            await JS.InvokeVoidAsync("alert", "Vui lòng chọn khối học!");
            return;
        }

        if (isCreate)
        {
            createModel.TenLopHoc = editModel.TenLopHoc;
            createModel.MaKhoiHoc = editModel.MaKhoiHoc;

            var success = await LopHocService.CreateAsync(createModel);
            if (success)
            {
                await JS.InvokeVoidAsync("alert", "✅ Thêm lớp học thành công!");
                await LoadLopHoc();
                showModal = false;
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "❌ Thêm thất bại!");
            }
        }
        else
        {
            var success = await LopHocService.UpdateAsync(editModel);
            if (success)
            {
                await JS.InvokeVoidAsync("alert", "✅ Cập nhật thành công!");
                await LoadLopHoc();
                showModal = false;
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "❌ Cập nhật thất bại!");
            }
        }
    }

    private async Task Delete(int id)
    {
        var confirm = await JS.InvokeAsync<bool>("confirm", "Bạn có chắc chắn muốn xóa lớp học này?");
        if (!confirm) return;

        var success = await LopHocService.DeleteAsync(id);
        if (success)
        {
            await JS.InvokeVoidAsync("alert", "🗑️ Xóa lớp học thành công!");
            await LoadLopHoc();
        }
        else
        {
            await JS.InvokeVoidAsync("alert", "❌ Lỗi khi xóa lớp học!");
        }
    }
}

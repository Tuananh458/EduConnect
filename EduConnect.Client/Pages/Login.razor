@page "/login"
@layout AuthLayout
@using EduConnect.Client.Services
@inject AuthService AuthService
@inject IJSRuntime JS
@inject NavigationManager Nav

<div class="register-wrapper">
    <div class="register-left">
        <img src="images/login-bg-3.jpg" alt="Đăng nhập" />
        <h2>CHÀO MỪNG TRỞ LẠI</h2>
        <p>Truy cập học tập cùng EduConnect</p>
    </div>

    <div class="register-right">
        <h3 class="mb-4">Đăng nhập tài khoản</h3>

        <EditForm Model="@LoginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <!-- Email / Username -->
            <div class="form-group mb-3">
                <InputText @bind-Value="LoginModel.EmailOrUsername"
                           class="form-control"
                           placeholder="Tên đăng nhập hoặc email"
                           disabled="@IsLoading" />
            </div>

            <!-- Mật khẩu -->
            <div class="form-group password-box mb-3 position-relative">
                <InputText @bind-Value="LoginModel.Password"
                           type="@PasswordType"
                           placeholder="Mật khẩu"
                           class="form-control"
                           disabled="@IsLoading" />
                <button type="button" class="eye-btn" @onclick="TogglePassword" disabled="@IsLoading">
                    <i class="fa @(PasswordType == "password" ? "fa-eye" : "fa-eye-slash")"></i>
                </button>
            </div>

            <!-- Ghi nhớ + Quên mật khẩu -->
            <div class="d-flex justify-content-between align-items-center mb-3 small">
                <div>
                    <input type="checkbox" id="rememberMe" @bind="RememberMe" disabled="@IsLoading" />
                    <label for="rememberMe" class="ms-1">Ghi nhớ đăng nhập</label>
                </div>
                <a href="/forgot-password" class="text-primary text-decoration-none">Quên mật khẩu?</a>
            </div>

            <!-- Nút đăng nhập -->
            <button class="btn btn-primary w-100" type="submit" disabled="@IsLoading">
                @if (IsLoading)
                {
                    <span><i class="fas fa-spinner fa-spin me-2"></i>Đang đăng nhập...</span>
                }
                else
                {
                    <span>Đăng nhập</span>
                }
            </button>

            <div class="text-center mt-3">Hoặc</div>
            <div id="googleSignInContainer" class="w-100 text-center mt-3"></div>

            <div class="mt-3 text-center">
                Chưa có tài khoản? <a href="/register" class="fw-semibold text-primary">Đăng ký ngay</a>
            </div>

            @if (!string.IsNullOrEmpty(Message))
            {
                <div class="alert mt-3 @(IsSuccess ? "alert-success" : "alert-danger")">
                    @Message
                </div>
            }
        </EditForm>
    </div>
</div>

<style>
    .register-wrapper {
        display: flex;
        height: 100vh;
        background: #f8f9fc;
    }

    .register-left {
        flex: 1;
        background: #fff;
        text-align: center;
        padding: 3rem 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        box-shadow: inset -1px 0 0 #e3e6f0;
    }

        .register-left img {
            max-width: 300px;
            border-radius: 10px;
            margin-bottom: 1rem;
        }

    .register-right {
        flex: 1;
        background: #fff;
        padding: 4rem 3rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        box-shadow: -1px 0 5px rgba(0,0,0,.05);
    }

    .password-box {
        position: relative;
    }

        .password-box .eye-btn {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #6c757d;
        }

            .password-box .eye-btn:hover {
                color: #4e73df;
            }

    button:disabled {
        opacity: .7;
        cursor: not-allowed;
    }

    .alert {
        font-size: .9rem;
        padding: .75rem;
    }
</style>

@code {
    // ViewModel dùng cho @bind (có set;)
    private class LoginVm
    {
        public string EmailOrUsername { get; set; } = "";
        public string Password { get; set; } = "";
    }

    private LoginVm LoginModel = new();
    private string PasswordType = "password";
    private bool RememberMe = false;
    private bool IsLoading = false;
    private string Message = "";
    private bool IsSuccess = false;

    private void TogglePassword() =>
        PasswordType = PasswordType == "password" ? "text" : "password";

    private async Task HandleLogin()
    {
        IsLoading = true;
        Message = "";
        IsSuccess = false;

        // Gọi qua service (AuthService.LoginAsync nhận 2 string)
        var (ok, msg) = await AuthService.LoginAsync(LoginModel.EmailOrUsername, LoginModel.Password);
        IsSuccess = ok;
        Message = msg;

        if (ok)
        {
            await JS.InvokeVoidAsync("console.log", "Đăng nhập thành công!");
            await Task.Delay(600);
            Nav.NavigateTo("/", true);
        }

        IsLoading = false;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("loadGoogleSignIn");
        }
    }
}

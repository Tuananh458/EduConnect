@page "/forgot-password"
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager Nav

<div class="auth-page">
    <div class="auth-card">
        <div class="text-center mb-3">
            <img src="images/logo.png" width="100" alt="EduConnect Logo" />
        </div>

        <h3 class="text-center mb-2">KHÔI PHỤC MẬT KHẨU</h3>
        <p class="text-center text-muted mb-4">
            Nhập email để nhận hướng dẫn đặt lại mật khẩu.
        </p>

        <EditForm Model="@model" OnValidSubmit="@HandleSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <InputText @bind-Value="model.Email" class="form-control" placeholder="Nhập email của bạn" />
            </div>

            <button class="btn btn-primary w-100" type="submit" disabled="@isLoading">
                @(isLoading ? "Đang gửi..." : "Gửi hướng dẫn")
            </button>

            <div class="text-center mt-3">
                <a href="/login">← Quay lại đăng nhập</a>
            </div>
        </EditForm>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert mt-3 @(isSuccess ? "alert-success" : "alert-danger")">
                @message
            </div>
        }
    </div>
</div>

@code {
    private ForgotPasswordRequest model = new();
    private bool isLoading = false;
    private bool isSuccess = false;
    private string message = "";

    private async Task HandleSubmit()
    {
        try
        {
            isLoading = true;
            isSuccess = false;
            message = "";

            var res = await Http.PostAsJsonAsync("auth/forgot-password", model);
            var result = await res.Content.ReadAsStringAsync();
            Console.WriteLine($"ForgotPassword Response: {result}");

            if (res.IsSuccessStatusCode)
            {
                isSuccess = true;
                message = "✅ Hướng dẫn đặt lại mật khẩu đã được gửi (nếu email tồn tại).";
            }
            else
            {
                isSuccess = false;
                message = $"❌ {result}";
            }
        }
        catch (Exception ex)
        {
            isSuccess = false;
            message = $"⚠️ Lỗi kết nối: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    public class ForgotPasswordRequest
    {
        public string Email { get; set; } = "";
    }
}

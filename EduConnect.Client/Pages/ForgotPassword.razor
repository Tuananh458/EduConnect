@page "/forgot-password"
@layout AuthLayout
@using EduConnect.Client.Services
@inject AuthService AuthService
@inject NavigationManager Nav

<div class="auth-page">
    <div class="auth-card shadow-sm">
        <div class="text-center mb-3">
            <img src="images/logo.png" width="100" alt="EduConnect Logo" />
        </div>

        <h3 class="text-center mb-2 fw-semibold">KHÔI PHỤC MẬT KHẨU</h3>
        <p class="text-center text-muted mb-4">
            Nhập email của bạn để nhận hướng dẫn đặt lại mật khẩu.
        </p>

        <EditForm Model="@model" OnValidSubmit="@HandleSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group mb-3">
                <InputText @bind-Value="model.Email"
                           class="form-control"
                           placeholder="Nhập email của bạn"
                           disabled="@isLoading" />
            </div>

            <button class="btn btn-primary w-100" type="submit" disabled="@isLoading">
                @if (isLoading)
                {
                    <span><i class="fas fa-spinner fa-spin me-2"></i>Đang gửi...</span>
                }
                else
                {
                    <span>Gửi hướng dẫn</span>
                }
            </button>

            <div class="text-center mt-3">
                <a href="/login" class="text-primary text-decoration-none">← Quay lại đăng nhập</a>
            </div>
        </EditForm>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert mt-3 @(isSuccess ? "alert-success" : "alert-danger")">
                @message
            </div>
        }
    </div>
</div>

<style>
    .auth-page {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: #f8f9fc;
    }

    .auth-card {
        background: #fff;
        padding: 2.5rem 2rem;
        border-radius: .5rem;
        width: 100%;
        max-width: 400px;
    }

    button:disabled {
        opacity: .8;
        cursor: not-allowed;
    }

    .alert {
        font-size: .9rem;
        padding: .75rem;
    }
</style>

@code {
    private ForgotPasswordVm model = new();
    private bool isLoading = false;
    private bool isSuccess = false;
    private string message = "";

    private async Task HandleSubmit()
    {
        if (string.IsNullOrWhiteSpace(model.Email))
        {
            message = "⚠️ Vui lòng nhập email hợp lệ.";
            isSuccess = false;
            return;
        }

        isLoading = true;
        message = "";
        isSuccess = false;

        var (ok, msg) = await AuthService.ForgotPasswordAsync(model.Email);
        isSuccess = ok;
        message = msg;

        if (ok)
        {
            // Giữ lại form để người dùng xem message trong 2s
            await Task.Delay(2000);
            Nav.NavigateTo("/login", true);
        }

        isLoading = false;
    }

    private class ForgotPasswordVm
    {
        public string Email { get; set; } = "";
    }
}

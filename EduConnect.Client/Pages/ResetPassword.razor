@page "/reset-password"
@attribute [Authorize]
@layout AuthLayout
@using EduConnect.Client.Services
@using Microsoft.AspNetCore.Authorization
@inject AuthService AuthService
@inject NavigationManager Nav

<div class="auth-page">
    <div class="auth-card shadow-sm">
        <div class="text-center mb-3">
            <img src="images/logo.png" width="100" alt="EduConnect Logo" />
        </div>

        <h3 class="text-center mb-2 fw-semibold">ĐẶT LẠI MẬT KHẨU</h3>
        <p class="text-center text-muted mb-4">Nhập mật khẩu mới để hoàn tất quá trình.</p>

        <EditForm Model="@model" OnValidSubmit="@HandleSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <!-- Mật khẩu mới -->
            <div class="form-group mb-3 position-relative">
                <InputText @bind-Value="model.NewPassword"
                           type="@passwordType"
                           class="form-control"
                           placeholder="Mật khẩu mới"
                           disabled="@isLoading" />
                <button type="button" class="eye-btn" @onclick="TogglePassword" disabled="@isLoading">
                    <i class="fa @(passwordType == "password" ? "fa-eye" : "fa-eye-slash")"></i>
                </button>
            </div>

            <!-- Xác nhận mật khẩu -->
            <div class="form-group mb-3 position-relative">
                <InputText @bind-Value="confirmPassword"
                           type="@passwordType"
                           class="form-control"
                           placeholder="Xác nhận mật khẩu mới"
                           disabled="@isLoading" />
            </div>

            <button class="btn btn-primary w-100" type="submit" disabled="@isLoading">
                @if (isLoading)
                {
                    <span><i class="fas fa-spinner fa-spin me-2"></i>Đang xử lý...</span>
                }
                else
                {
                    <span>Xác nhận đặt lại</span>
                }
            </button>

            <div class="text-center mt-3">
                <a href="/login" class="text-primary text-decoration-none">← Quay lại đăng nhập</a>
            </div>
        </EditForm>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert mt-3 @(isSuccess ? "alert-success" : "alert-danger")">
                @message
            </div>
        }
    </div>
</div>

<style>
    .auth-page {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: #f8f9fc;
    }

    .auth-card {
        background: #fff;
        padding: 2.5rem 2rem;
        border-radius: .5rem;
        width: 100%;
        max-width: 400px;
    }

    .eye-btn {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #6c757d;
    }

        .eye-btn:hover {
            color: #4e73df;
        }

    button:disabled {
        opacity: .8;
        cursor: not-allowed;
    }

    .alert {
        font-size: .9rem;
        padding: .75rem;
    }
</style>

@code {
    private ResetPasswordVm model = new();
    private string confirmPassword = "";
    private bool isLoading = false;
    private bool isSuccess = false;
    private string message = "";
    private string passwordType = "password";

    protected override void OnInitialized()
    {
        // 🧩 Lấy token & email từ URL
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        var query = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);

        if (query.TryGetValue("token", out var token))
            model.Token = token!;
        if (query.TryGetValue("email", out var email))
            model.Email = email!;

        Console.WriteLine($"Reset Password init: token={model.Token}, email={model.Email}");
    }

    private void TogglePassword() =>
        passwordType = passwordType == "password" ? "text" : "password";

    private async Task HandleSubmit()
    {
        if (string.IsNullOrWhiteSpace(model.NewPassword))
        {
            message = "⚠️ Mật khẩu không được để trống.";
            isSuccess = false;
            return;
        }

        if (model.NewPassword != confirmPassword)
        {
            message = "❌ Mật khẩu xác nhận không trùng khớp.";
            isSuccess = false;
            return;
        }

        isLoading = true;
        message = "";
        isSuccess = false;

        var (ok, msg) = await AuthService.ResetPasswordAsync(model.Email, model.Token, model.NewPassword);
        isSuccess = ok;
        message = msg;

        if (ok)
        {
            await Task.Delay(1500);
            Nav.NavigateTo("/login", true);
        }

        isLoading = false;
    }

    private class ResetPasswordVm
    {
        public string Email { get; set; } = "";
        public string Token { get; set; } = "";
        public string NewPassword { get; set; } = "";
    }
}

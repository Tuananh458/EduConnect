@page "/reset-password"
@using System.Net.Http.Json
@using Microsoft.AspNetCore.WebUtilities
@inject HttpClient Http
@inject NavigationManager Nav

<div class="auth-page">
    <div class="auth-card">
        <div class="text-center mb-3">
            <img src="images/logo.png" width="100" alt="EduConnect Logo" />
        </div>

        <h3 class="text-center mb-2">ĐẶT LẠI MẬT KHẨU</h3>
        <p class="text-center text-muted mb-4">Nhập mật khẩu mới để hoàn tất.</p>

        <EditForm Model="@model" OnValidSubmit="@HandleSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <InputText @bind-Value="model.NewPassword" type="password" class="form-control" placeholder="Mật khẩu mới" />
            </div>

            <button class="btn btn-primary w-100" type="submit" disabled="@isLoading">
                @(isLoading ? "Đang xử lý..." : "Xác nhận đặt lại")
            </button>

            <div class="text-center mt-3">
                <a href="/login">← Quay lại đăng nhập</a>
            </div>
        </EditForm>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert mt-3 @(isSuccess ? "alert-success" : "alert-danger")">
                @message
            </div>
        }
    </div>
</div>

@code {
    private ResetPasswordRequest model = new();
    private bool isLoading = false;
    private bool isSuccess = false;
    private string message = "";

    protected override void OnInitialized()
    {
        // Lấy token & email từ URL
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        var query = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);

        if (query.TryGetValue("token", out var token))
            model.Token = token!;
        if (query.TryGetValue("email", out var email))
            model.Email = email!;

        Console.WriteLine($"Reset Password init: token={model.Token}, email={model.Email}");
    }

    private async Task HandleSubmit()
    {
        try
        {
            isLoading = true;
            isSuccess = false;
            message = "";

            var res = await Http.PostAsJsonAsync("auth/reset-password", model);
            var result = await res.Content.ReadAsStringAsync();
            Console.WriteLine($"ResetPassword Response: {result}");

            if (res.IsSuccessStatusCode)
            {
                isSuccess = true;
                message = "✅ Mật khẩu đã được đặt lại!";
                await Task.Delay(2000);
                Nav.NavigateTo("/login");
            }
            else
            {
                isSuccess = false;
                message = $"❌ {result}";
            }
        }
        catch (Exception ex)
        {
            isSuccess = false;
            message = $"⚠️ Lỗi kết nối: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    public class ResetPasswordRequest
    {
        public string Email { get; set; } = "";
        public string Token { get; set; } = "";
        public string NewPassword { get; set; } = "";
    }
}
